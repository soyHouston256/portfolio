---
import Section from "../Section.astro";
import { skills } from "@cv";
---

<Section title="Skills">
    <ul>
        {
            skills.map(({name}) => (
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 1rem;
        color: black;
        flex-wrap: wrap;

    }
    li {
        border-radius: 6px;
        background-color: #000;
        color: white;
        font-size: 0.8rem;
        font-weight: 500;
        list-style: none;
        padding: 0.2rem 0.6rem;
    }
</style>