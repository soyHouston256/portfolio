---
import Section from '../Section.astro';
import {work} from '@cv'
---

<Section title="Experience">
    <ul>
        {work.map(({name, position, startDate, endDate, summary}) => {
            const startyear = new Date(startDate).getFullYear();
            const endyear = endDate !== null && endDate !== "" ?  new Date(endDate).getFullYear() : 'Today';
            const years = `${startyear} - ${endyear}`;
            return (
            <li>
                <article>
                    <header>
                        <div>
                            <h3>{name}</h3>
                            <h4>{position}</h4>
                        </div>
                        <time>{years}</time>
                    </header>
                    <footer>
                        <p>{summary}</p>
                    </footer>
                </article>
            </li>
        )}
    )}
    </ul>
</Section>
<style>
    ul {
        color: #666;
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    h2 {
        margin: 0;
        color: black;
    }
    article h3 {
        margin: 0;
        color: #111;
    }
    article h4 {
        margin: 0;
        color: #222;
    }
    header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: 4px;
    }
    time{
        color: #666;
        font-size: 0.9rem;
    }
</style>