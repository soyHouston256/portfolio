---
import { basics } from '@cv';
import Mail from '@/icons/Mail.astro';
import Phone from '@/icons/Phone.astro';
import X from '@/icons/X.astro';
import LinkedIn from '@/icons/LinkedIn.astro';
import GitHub from '@/icons/GitHub.astro';
import WorldMap from '@/icons/WorldMap.astro';
import Section from '../Section.astro';

const { name, label, image, location, profiles, phone, email } = basics;
const { city, region } = location

const SOCIAL_ICONS: Record<string, any> = {
    X,
    GitHub,
    LinkedIn,
}
---
<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <WorldMap/>
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a href={`mailto:${email}`}
                        title = {`send email to ${name} from ${email}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <Mail/>
                        </a>
                    )
                }
                {
                    phone && (
                        <a href={`tel:${phone}`}
                        title = {`Call to ${name} to number ${phone}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <Phone/>
                        </a>
                    )
                }
                {
                    profiles.map(({network, url, username}) => {
                        //const { network, url, username } = profile;
                        const Icon = SOCIAL_ICONS[network];
                        return (
                            <a href={url}
                            title = {`Visit ${name} profile on ${network}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                                {Icon && <Icon/>}
                            </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt="">
        </figure>
    </div>
</Section>
<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }
    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
        color: #666;
    }
    footer a {
        color: #777;
        display:  inline-flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        margin-top: 8px;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    footer a:hover {
        background-color: #eee;
    }
    h1 {
        color: black;
        font-size: 2rem;
        font-weight: 700;
    }
    h2 {
        color: #444;
        font-size: 1.1rem;
        font-weight: 500;
        text-wrap:  balance;

    }
    img {
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 128px;
        border-radius: 6px;
    }
</style>
